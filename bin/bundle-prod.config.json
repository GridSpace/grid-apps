{
    "compress": true,
    "outputs": {
      "bundle": "./web/boot/bundle-{version}.bin"
    },
    "inputs": [
      { "root": "web/moto", "prefix": "moto" },
      { "root": "web/kiri", "prefix": "kiri" },
      { "root": "web/font", "prefix": "font" },
      { "root": "src/wasm", "prefix": "wasm" },
      { "root": "src/wasm", "prefix": "lib/kiri/wasm" },
      { "src": "alt/pack/kiri-main.js", "dst": "lib/main/kiri.js" },
      { "src": "src/pack/kiri-main.js", "dst": "lib/main/kiri.js" },
      { "src": "src/pack/kiri-work.js", "dst": "lib/kiri/run/worker.js" },
      { "src": "src/pack/kiri-pool.js", "dst": "lib/kiri/run/minion.js" },
      { "src": "src/gpu/raster-worker.js", "dst": "lib/gpu/raster-worker.js" },
      { "src": "src/ext/tween.js", "dst": "lib/ext/tween.js" }
    ],
    "excludes": [
        "src/pack",
        "web/boot/bundle*"
    ]
}
